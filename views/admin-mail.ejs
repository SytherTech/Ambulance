<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Messages</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 60px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Admin Page</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Manage Ambulance</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin-bookings">Manage Bookings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin-mail">Check Mail</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Page content -->
    <div class="container">
        <h1>Customer Messages</h1>

        <!-- Messages List -->
        <table class="table">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <% if (contacts.length> 0) { %>

                    <% contacts.forEach((contact)=> { %>

                        <tr>
                            <td>
                                <%= contact.name %>
                            </td>
                            <td>
                                <%= contact.phone %>
                            </td>
                            <td>
                                <%= contact.message %>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <p>No Contact found.</p>
                                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Message list data (sample data for demonstration)
        var messages = [
            {
                customerName: "John Doe",
                phone: "1234567890",
                message: "Hello, I have a question about your services."
            },
            {
                customerName: "Jane Smith",
                phone: "9876543210",
                message: "Hi, I would like to inquire about booking an ambulance."
            },
            {
                customerName: "Robert Johnson",
                phone: "4567891230",
                message: "Good afternoon, I need urgent medical assistance."
            }
        ];

        // Function to render the message list
        function renderMessageList() {
            var tableBody = $("#messageList");
            tableBody.empty();

            for (var i = 0; i < messages.length; i++) {
                var message = messages[i];

                var row = $("<tr></tr>");
                row.append("<td>" + message.customerName + "</td>");
                row.append("<td>" + message.phone + "</td>");
                row.append("<td>" + message.message + "</td>");

                tableBody.append(row);
            }
        }

        // Initial rendering of the message list
        renderMessageList();
    </script>
</body>

</html>